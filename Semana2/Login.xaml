<Window x:Class="Semana2.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana2"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="Usuario:" Margin="0,0,0,5" Width="200"/>
            <TextBox x:Name="txtUsuario" Width="200" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Contraseña:" Margin="0,0,0,5" Width="200"/>
            <PasswordBox x:Name="txtContraseña" Width="200" Height="30" Margin="0,0,0,10"/>

            <Button Content="Ingresar" Click="Button_Click" Width="100" Height="40" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
