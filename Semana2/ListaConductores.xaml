<Window x:Class="Semana2.ListaConductores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana2"
        mc:Ignorable="d"
        Title="ListaConductores" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgConductores" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre Conductor" Binding="{Binding NombreConductor}"/>
                <DataGridTextColumn Header="Licencia" Binding="{Binding Licencia}"/>
                <DataGridTextColumn Header="Transporte" Binding="{Binding Transporte}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
